@model IEnumerable<MyPark.Model.DataBase.Models.plano>

@{
    ViewBag.Title = "Plano";
}

<h2>Planos</h2>

<script type="text/javascript">

    function abrirTelaAddPlano() {
        $("#dlgAddPlano").modal("show");
    }

</script>

@Ajax.ActionLink("Cadastrar", "ExibirAddPlano", new AjaxOptions()
{
    HttpMethod = "post",
    UpdateTargetId = "telaAddPlano",
    OnSuccess = "abrirTelaAddPlano",
    LoadingElementId = "loadAjax",
    InsertionMode = InsertionMode.Replace
})

<div id="tblPlano">
    @Html.Partial("_TabelaPlano", Model)
</div>


<div id="telaAddPlano">


</div>
